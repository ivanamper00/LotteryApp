<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:clipToPadding="false"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardStart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="360dp"
        app:cardBackgroundColor="@color/app_red"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/headerTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".12" >
        <TextView
            android:id="@+id/randomFirst"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/custom_ball_background"
            android:layout_margin="6dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/toxigenesis_bd"
        tools:text="SampleTitle"
        android:textSize="23sp"
        android:textColor="@color/app_red"
        app:layout_constraintBottom_toBottomOf="@+id/cardStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardStart" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardEnd"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="360dp"
        app:cardBackgroundColor="@color/ball_blue"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/headerTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".12" >
        <TextView
            android:id="@+id/randomSecond"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="13"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/custom_ball_background"
            android:layout_margin="6dp"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>